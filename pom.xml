<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.dragonlabs.scaleadapter</groupId>
    <artifactId>ScaleAdapter</artifactId>
    <packaging>pom</packaging>
    <version>1.4</version>

    <name>The Scale Adapter</name>
    <description>A simple and easy library to create network projects, which are based on Netty and implemented a
        PubSub system</description>
    <url>https://github.com/Dragon-Labs/TheScaleAdapter</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <java.source.version>1.8</java.source.version>
        <java.target.version>1.8</java.target.version>
    </properties>

    <modules>
        <module>Library</module>
        <module>Example</module>
    </modules>

    <inceptionYear>2018</inceptionYear>
    <licenses>
        <license>
          <name>The Apache Software License, Version 2.0</name>
          <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>
         
    <organization>
        <name>Dragon-Labs</name>
        <url>https://www.dragon-labs.de</url>
    </organization>
         
    <developers>
        <developer>
            <id>Alphyron</id>
            <name>Lennard Brinkhaus</name>
            <email>admin@dragon-labs.de</email>
            <url>https://www.dragon-labs.de/</url>
            <organization>Dragon-Labs</organization>
            <organizationUrl>https://www.dragon-labs.de</organizationUrl>
            <roles>
                <role>project leader</role>
                <role>developer</role>
            </roles>
            <timezone>Germany</timezone>
        </developer>
    </developers>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>${java.source.version}</source>
                        <target>${java.target.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>
        <!-- https://mvnrepository.com/artifact/io.netty/netty-all -->
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-all</artifactId>
            <version>4.1.32.Final</version>
        </dependency>

    </dependencies>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/Dragon-Labs/TheScaleAdapter/issues</url>
    </issueManagement>
</project>
